@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_LayoutLayui.cshtml";
}
<div style="padding:10px;">
    <form class="layui-form" action="">
        <input type="hidden" id="role" />
        <div class="layui-form-item">
            <label class="layui-form-label">拆分数量</label>
            <div class="layui-input-block">
                <input type="text" name="splitCount" id="splitCount" required lay-verify="number" placeholder="请输入角色名" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">提交</button>
                <button id="closeLayer" class="layui-btn layui-btn-primary">取消</button>
            </div>
        </div>
    </form>
</div>

<script>
    layui.use(['form'], function () {
        form = layui.form;

        //表单提交
        form.on('submit(formDemo)', function (data) {
            $.post("/StockDetail/Submit", role, function (res) {
                parent.layer.alert(res.msg);
                if (!res.success)
                    return false;
                $("#closeLayer").click();
                parent.$("#query").click();
            });
            return false;
        });

        //取消
        $("#closeLayer").click(function () {
            let index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        });
    });
</script>

