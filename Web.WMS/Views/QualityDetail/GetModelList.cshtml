@{
    ViewBag.Title = "质检单";
    Layout = "~/Views/Shared/_LayoutLayui.cshtml";
}

<style type="text/css">
    input {
        margin-left: 5px;
    }
</style>

<div class="box">
    <div style="border-bottom:1px solid black;padding:20px;">
        <span style="font-size:15px;">生产订单</span>
        <input id="ErpVoucherNo" placeholder="生产单号">
    </div>
    <div style="border-bottom:1px solid black;padding:20px;">
        <div class="layui-row">
            <div class="layui-col-md4">
                订单号<input id="orderNo" readonly="readonly">
            </div>
            <div class="layui-col-md4">
                番号<input id="batchNo" readonly="readonly">
            </div>
            <div class="layui-col-md4">
                检验数据模板<input id="moudle" readonly="readonly">
            </div>
        </div>
        <div class="layui-row">
            <div class="layui-col-md4">
                物料号<input id="materialNo" readonly="readonly">
            </div>
            <div class="layui-col-md4">
                产线<input id="line" readonly="readonly">
            </div>
            <div class="layui-col-md4">
                订单数量<input id="qty" readonly="readonly">
            </div>
        </div>
        <div class="layui-row">
            <div class="layui-col-md4">
                已检合格数<input id="alreadyQulaityQty" readonly="readonly">
            </div>
            <div class="layui-col-md4">
                未检合格数<input id="noQulaityQty" readonly="readonly">
            </div>
        </div>
    </div>
    <div style="border-bottom:1px solid black;padding:20px;">

        <form class="layui-form" action="">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">外观掉漆</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观掉漆" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">外观划伤</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观划伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">外观磕碰伤</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观磕碰伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">外观污迹</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观污迹" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">外观塌边</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观掉漆" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">外观锈迹</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观划伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">外观漏工序</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观磕碰伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">噪音分贝</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观污迹" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">噪音打点</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观掉漆" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">噪音不一致</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观划伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">噪音杂音</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观磕碰伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">运转卡点卡顿</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观污迹" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">运转轴紧</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观掉漆" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">运转抖动</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观划伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">安装输出尺寸</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观磕碰伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">安装输入尺寸</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观污迹" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">装配漏装</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观掉漆" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">装配不到位</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观划伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">其他原因</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观磕碰伤" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">精度弧分</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" placeholder="请输入外观污迹" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div style="padding:20px;">
        <div style="padding-bottom:10px;">
            检验合格数量<input id="QualityQty" type="number" style="height:30px;" placeholder="检验合格数量">
        </div>
        <div>
            <div class="layui-row">
                <div class="layui-col-md4">
                    <div div class="layui-row">
                        <div class="layui-col-md2" style="padding-top:6px;">备注</div>
                        <div class="layui-col-md10">
                            <select>
                                <option value="0">北京</option>
                                <option value="1">上海</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="layui-col-md4" style="padding-left:10px;">
                    <button class="btn btn-primary" id="ok">确定</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#ErpVoucherNo").keypress(function (even) {
            if (even.which == 13) {
                if ($("#ErpVoucherNo").val() == "") {
                    layer.alert("输入框不能为空!");
                    return false;
                }
                $.post("", { orderNo: $("#ErpVoucherNo").val() }, function (data) {
                    //赋值

                })
            }
        });

        $("#ok").click(function () {
            if ($("#ErpVoucherNo").val() == "") {
                layer.alert("输入框不能为空!");
                return false;
            }
            $.post("", { formJosn: $("#articleForm").serialize() }, function (data) {

            })
        });
    })
</script>