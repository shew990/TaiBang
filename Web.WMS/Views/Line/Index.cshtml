@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLayui.cshtml";
}
<div class="box">
    <div class="layui-card-body layui-table-body layui-table-main">
        <div class="layui-card-body">
            <div class="layui-inline layui-show-xs-block">
                <input id="LineName" class="layui-input" placeholder="产线名称">
            </div>
            <div class="layui-inline layui-show-xs-block">
                <button id="Query" class="btn btn-primary">查询</button>
                <a id="add" href="###" class="btn btn-primary">新增</a>
                <a id="refresh" href="###" class="hidden">刷新</a>
            </div>
        </div>
        <table class="layui-hide" id="lineTable" lay-filter="init"></table>
        <script type="text/html" id="barDemo">
            <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
            <a class="layui-btn layui-btn-xs" lay-event="delete">删除</a>
        </script>
    </div>
</div>

<script type="text/javascript">
    layui.use(['laypage', 'layer', 'table'], function () {
        table = layui.table
            , laypage = layui.laypage
            , layer = layui.layer

        tableInit();

        //表格初始化
        function tableInit() {
            table.render({
                elem: '#lineTable'
                , height: 520
                , url: '/Line/List'
                , method: 'post'
                , contentType: 'application/json'
                , where: {
                    lineName: $("#LineName").val().trim()
                }
                , response: {
                    statusCode: 1
                }
                , parseData: function (res) {
                    return {
                        "code": res.Result,
                        "msg": res.ResultValue,
                        "count": res.PageData.totalCount,
                        "data": res.Data
                    };
                }
                , title: '产线'
                , page: true
                , cols: [
                    [
                        { type: 'numbers', title: '序号', width: 60, fixed: 'left' }
                        , { field: 'LineName', title: '产线名称', width: 100, }
                        , { field: 'CreateTimeString', title: '创建时间', width: 100, }
                        , { fixed: 'right', title: '操作', width: 150, align: 'center', toolbar: '#barDemo' }
                    ]
                ]
            });
        }

        //监听行工具事件
        table.on('tool(init)', function (obj) {
            var data = obj.data, event = obj.event;
            if (event === 'detail') {//查看
                layer.open({
                    type: 2,
                    title: "产线信息编辑",
                    area: ['45%', '50%'],
                    content: "/Line/Form",
                    success: function (layero, index) {
                        var body = layer.getChildFrame('body', index);
                        //初始化表单数据的值
                        let keyArray = Object.keys(data);
                        let valueArray = Object.values(data);
                        $.each(body.find(".layui-input"), function (index, item) {
                            for (let i = 0; i < keyArray.length; i++) {
                                if ($(item).attr("name") == keyArray[i]) {
                                    $(item).val(valueArray[i]);
                                    break;
                                }
                            }
                        });
                        body.find("#station").val(JSON.stringify(data));
                    }
                });
                return false;
            }
            if (event === 'delete') {
                layer.confirm('确认删除吗?', function (index) {
                    layer.close(index);
                    $.post("/Line/DeleteSave", data, function (res) {
                        if (!res.Success) {
                            layer.alert(res.Msg);
                            return false;
                        }
                        obj.del();
                    });
                });
            }
        });

        //分页
        laypage.render({
            elem: 'pageDemo'
            , count: 100
            , skin: '#1E9FFF'
            , jump: function (obj, first) {
                if (!first)
                    layer.msg('第' + obj.curr + '页', { offset: 'b' });
            }
        });

        //查询
        $('#Query').click(function () {
            tableInit();
        });

        //新增
        $('#add').click(function () {
            layer.open({
                type: 2,
                title: "产线信息新增",
                area: ['45%', '50%'],
                content: "/Line/Form"
            });
        });

        //刷新
        $("#refresh").click(function () {
            table.reload('lineTable', {});
        });

        //回车事件绑定
        $("input").bind('keyup', function (event) {
            if (event.keyCode == "13")
                tableInit();
        });
    });
</script>

